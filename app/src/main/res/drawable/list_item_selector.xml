<?xml version="1.0" encoding="utf-8"?>

<!--
References:
[1] http://stackoverflow.com/questions/2217753/changing-background-color-of-listview-items-on-android
[2] http://stackoverflow.com/questions/2562051/listview-item-background-via-custom-selector
[3] http://www.michenux.net/android-listview-highlight-selected-item-387.html
-->

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@android:integer/config_mediumAnimTime">

    <item android:drawable="@android:color/holo_orange_dark" android:state_enabled="true" android:state_pressed="true" />
    <item android:drawable="@android:color/holo_green_light" android:state_enabled="true" android:state_focused="true" />
    <item android:drawable="@android:color/holo_green_dark" android:state_enabled="true" android:state_selected="true" />
    <item android:drawable="@android:color/transparent" />

</selector>